<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f3f3"
    >

    <LinearLayout
        android:id="@+id/fileState_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f4f3f3"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/title_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f4f3f3"
            >
        </android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd"
            >
        </View>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_below="@id/fileState_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="#f4f3f3"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/progress_bar"
        />

    <LinearLayout
        android:id="@+id/activity_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <include layout="@layout/activity_bottom1"
            android:id="@+id/sss"></include>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/body"
        android:layout_below="@id/fileState_rel"
        android:layout_above="@id/activity_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            >
        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/empty_rel"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/empty_view_image"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="没有文件"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="#999999"
                />

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>
